<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/background_color"
tools:context=".MainActivity">

    <Button
        android:id="@+id/back_btn"
        android:layout_width="62dp"
        android:layout_height="45dp"
        android:layout_margin="25dp"
        android:layout_marginTop="10dp"
        app:icon="@drawable/baseline_arrow_back_ios_24"
        app:iconPadding="0dp"
        android:backgroundTint="@color/btn_color"
        app:iconTint="@color/background_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_events_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/view_event_title"
        android:textColor="@color/txt_color"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.573"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
    android:id="@+id/linear_layout1"
    android:layout_width="340dp"
    android:layout_height="94dp"
    android:layout_marginStart="44dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="46dp"
    android:background="@drawable/gradient_blue"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.473"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/view_events_title">

    <TextView
        android:id="@+id/txt_name1"
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:layout_marginStart="7dp"
        android:gravity="left|center_vertical"
        android:textColor="#B3F4F5FC"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_info1"
        android:layout_width="320dp"
        android:layout_height="31dp"
        android:layout_marginStart="7dp"
        android:gravity="top"
        android:textColor="#B3F4F5FC" />
</LinearLayout>

<LinearLayout
    android:id="@+id/linear_layout2"
    android:layout_width="340dp"
    android:layout_height="94dp"
    android:layout_marginStart="44dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="46dp"
    android:background="@drawable/gradient_blue"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.473"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/linear_layout1">

    <TextView
        android:id="@+id/txt_name2"
