<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ViewFeedbackAdmin">

    <TextView
        android:id="@+id/txt_event_review_f"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/txt_color"
        app:layout_constraintTop_toBottomOf="@+id/txt_event_rating_f"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtFeedbackTitle_f"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/txt_feedback"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/txt_color"
        app:layout_constraintTop_toBottomOf="@+id/txt_description_f" />

    <TextView
        android:id="@+id/txt_event_rating_f"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/txt_color"
        app:layout_constraintTop_toBottomOf="@+id/txtFeedbackTitle_f" />

    <TextView
        android:id="@+id/txt_description_f"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/txt_color"
        app:layout_constraintTop_toBottomOf="@+id/txt_event_info_f" />

    <TextView
        android:id="@+id/txt_event_info_f"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="21sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/txt_color"
        app:layout_constraintTop_toBottomOf="@+id/txt_created_date_f" />

    <TextView
        android:id="@+id/txt_created_date_f"
        android:layout_width="293dp"
        android:layout_height="31dp"
        android:textAlignment="viewEnd"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.762"
        android:textColor="@color/txt_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_event_name_f" />

    <TextView
        android:id="@+id/txt_event_name_f"
        android:textStyle="bold"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:gravity="end"
        android:textAlignment="viewEnd"
        android:textSize="34sp"
        android:textColor="@color/txt_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_back_to_list_f"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        app:icon="@drawable/baseline_arrow_back_ios_24"
        app:iconTint="@color/background_color"
        android:backgroundTint="@color/btn_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>