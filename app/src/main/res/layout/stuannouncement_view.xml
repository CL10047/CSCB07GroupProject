<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/background_color"
    tools:context=".StudentAnnouncementView">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="301dp"
        android:layout_height="61dp"
        android:layout_marginTop="5dp"
        android:text="Announcements"
        android:textColor="@color/txt_color"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.654"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/back_btn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/btn_color"
        android:textColor="@color/background_color"
        app:icon="@drawable/baseline_arrow_back_ios_24"
        app:iconTint="@color/background_color"
        app:layout_constraintEnd_toStartOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="340dp"
        android:layout_height="94dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient_blue"

        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <TextView
            android:id="@+id/txt_name1"
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:gravity="bottom"
            android:textColor="#B3F4F5FC"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_info1"
            android:layout_width="320dp"
            android:layout_height="31dp"
            android:gravity="top"
            android:textColor="#B3F4F5FC" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout2"
        android:layout_width="340dp"
        android:layout_height="94dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient_blue"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout1">

        <TextView
            android:id="@+id/txt_name2"
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:gravity="bottom"
            android:textColor="@color/txt_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_info2"
            android:layout_width="320dp"
            android:layout_height="31dp"
            android:gravity="top"
            android:textColor="@color/txt_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout3"
        android:layout_width="340dp"
        android:layout_height="94dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/gradient_blue"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout2">

        <TextView
            android:id="@+id/txt_name3"
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:gravity="bottom"
            android:textColor="@color/txt_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_info3"
            android:layout_width="320dp"
            android:layout_height="31dp"
            android:gravity="top"
            android:textColor="@color/txt_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout4"
        android:layout_width="340dp"
        android:layout_height="94dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/gradient_blue"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout3">

        <TextView
            android:id="@+id/txt_name4"
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:gravity="bottom"
            android:textColor="@color/txt_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_info4"
            android:layout_width="320dp"
            android:layout_height="31dp"
            android:gravity="top"
            android:textColor="@color/txt_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout5"
        android:layout_width="340dp"
        android:layout_height="90dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/gradient_blue"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout4">

        <TextView
            android:id="@+id/txt_name5"
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:gravity="bottom"
            android:textColor="@color/txt_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_info5"
            android:layout_width="320dp"
            android:layout_height="31dp"
            android:gravity="top"
            android:textColor="@color/txt_color" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_page_number"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:text="100"
        android:textAlignment="center"
        android:textColor="@color/txt_color"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_next"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toEndOf="@+id/btn_previous"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout5" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="60dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="76dp"
        android:backgroundTint="@color/btn_color"
        app:icon="@drawable/baseline_arrow_forward_ios_24"
        app:iconTint="@color/background_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout5"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_previous"
        android:layout_width="60dp"
        android:layout_height="42dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/btn_color"
        app:icon="@drawable/baseline_arrow_back_ios_24"
        app:iconTint="@color/background_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_next"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout5"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>