<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentActivity">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="393dp"
        android:layout_height="170dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="36dp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/homepage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/homepage_title"
            android:textColor="@color/txt_color"
            android:textSize="52sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#00FFFFFF"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/baseline_design_services_24"
            app:iconPadding="0dp"
            app:iconSize="150dp"
            app:iconTint="@color/btn_color"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <LinearLayout
            android:id="@+id/anouncement_btn"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_blue"
            android:elevation="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/anouncement_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/announcement"
                android:textColor="@color/txt_color"
                android:textSize="25sp" />
        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="10dp" />

        <LinearLayout
            android:id="@+id/rsvp_btn"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_blue"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rsvp_events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="RSVP"
                android:textColor="@color/txt_color"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <LinearLayout
            android:id="@+id/post_btn"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_blue"
            android:orientation="vertical">

            <TextView
                android:id="@+id/post_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="POSt\nChecker"
                android:textColor="@color/txt_color"
                android:textSize="25sp" />
        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="10dp" />

        <LinearLayout
            android:id="@+id/review_btn"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_blue"
            android:orientation="vertical">

            <TextView
                android:id="@+id/review_events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/review_txt"
                android:textColor="@color/txt_color"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:gravity="left|center"
        android:orientation="horizontal"
        android:paddingBottom="25dp"
        android:paddingLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        >

        <LinearLayout
            android:id="@+id/complaints_btn"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_blue"
            android:orientation="vertical">

            <TextView
                android:id="@+id/complaints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/gradient_blue"
                android:text="@string/complaints_txt"
                android:textColor="@color/txt_color"
                android:textSize="25sp" />
        </LinearLayout>
        <Space
            android:layout_width="40dp"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/log_out_btn"
            android:layout_width="130dp"
            android:textSize="21sp"
            android:layout_height="130dp"
            android:background="@drawable/circle_btn"
            android:textStyle="bold"
            android:text="@string/log_out" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_announcement"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_marginTop="10dp"
        android:text="New Announcement(s)"
        android:textColor="@color/txt_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txt_events"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_events"
        android:layout_width="181dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:gravity="bottom"
        android:text="New Event(s)"
        android:textColor="@color/txt_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>