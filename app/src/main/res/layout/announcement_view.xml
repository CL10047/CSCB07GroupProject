<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/background_color"
    tools:context=".AnnouncementView">

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginEnd="167dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/btn_color"
        android:text="Back"
        android:textColor="@color/background_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="340dp"
        android:layout_marginTop="20dp"
        android:layout_height="94dp"
        android:layout_marginBottom="532dp"
        android:background="@drawable/gradient_blue"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textInputLayout3"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/txt_name1"
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:gravity="bottom"
            android:textColor="#B3F4F5FC"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_info1"
            android:layout_width="320dp"
            android:layout_height="31dp"
            android:gravity="top"
            android:textColor="#B3F4F5FC" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout2"
        android:layout_width="340dp"
        android:layout_height="94dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/gradient_blue"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout1">

        <TextView
            android:id="@+id/txt_name2"
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:gravity="bottom"
            android:textColor="@color/txt_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_info2"
            android:layout_width="320dp"
            android:layout_height="31dp"
            android:gravity="top"
            android:textColor="@color/txt_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout3"
        android:background="@drawable/gradient_blue"
        android:layout_width="340dp"
        android:layout_height="94dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="46dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout2">

        <TextView
            android:id="@+id/txt_name3"
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:gravity="bottom"
            android:textSize="20sp"
            android:textColor="@color/txt_color"/>

        <TextView
            android:id="@+id/txt_info3"
            android:layout_width="320dp"
            android:layout_height="31dp"
            android:gravity="top"
            android:textColor="@color/txt_color"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout4"
        android:layout_width="340dp"
        android:layout_height="94dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/gradient_blue"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout3">

        <TextView
            android:id="@+id/txt_name4"
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:gravity="bottom"
            android:textSize="20sp"
            android:textColor="@color/txt_color"/>

        <TextView
            android:id="@+id/txt_info4"
            android:layout_width="320dp"
            android:layout_height="31dp"
            android:gravity="top"
            android:textColor="@color/txt_color"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout5"
        android:layout_width="340dp"
        android:layout_height="90dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/gradient_blue"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout4">

        <TextView
            android:id="@+id/txt_name5"
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:gravity="bottom"
            android:textSize="20sp"
            android:textColor="@color/txt_color"/>

        <TextView
            android:id="@+id/txt_info5"
            android:layout_width="320dp"
            android:layout_height="31dp"
            android:gravity="top"
            android:textColor="@color/txt_color"/>
    </LinearLayout>


    <TextView
        android:id="@+id/txt_page_number"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="100"
        android:textAlignment="center"
        android:textColor="@color/txt_color"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_next"
        app:layout_constraintStart_toEndOf="@+id/btn_previous"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout5"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="69dp">

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="60dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="76dp"
        android:backgroundTint="@color/btn_color"
        app:icon="@drawable/forwardarrow"
        app:iconTint="@color/background_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout5" />

    <Button
        android:id="@+id/btn_previous"
        android:layout_width="60dp"
        android:layout_height="42dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/btn_color"
        app:icon="@drawable/backarrow"
        app:iconTint="@color/background_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="301dp"
        android:layout_height="61dp"
        android:layout_marginTop="5dp"
        android:text="Announcements"
        android:layout_marginBottom="25dp"
        android:textColor="@color/txt_color"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/linear_layout1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>